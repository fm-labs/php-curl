{
    "name": "fm-labs/php-curl",
    "description": "Curl object-wrapper library for PHP",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "fm-labs",
            "email": "flowmotionlabs@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "psr/log": "^1.1",
        "psr/http-message": "^1.0",
        "psr/http-client": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7|^8"
    },
    "autoload": {
        "psr-4": {
            "FmLabs\\Curl\\": "src/Curl"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FmLabs\\Test\\Curl\\": "tests/TestCase/Curl"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --testsuite php-curl-lib",
        "test-integration": "./vendor/bin/phpunit --testsuite php-curl-integration -vv"
    }
}
